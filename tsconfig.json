{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/pages/*": ["pages/*"],
      "@/providers/*": ["providers/*"],
      "@/styles/*": ["styles/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    ".eslintrc.js",
    "jest.setup.js",
    "jest.config.js",
    "next-env.d.ts"
   ],
  "exclude": ["node_modules"]
}
